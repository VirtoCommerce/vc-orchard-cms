@model VirtoCommerce.WebStore.Models.WebStoreSettingsPart

<fieldset>
    <legend>@T("Connection settings").ToString()</legend>
    <div>
        @Html.LabelFor(m => m.ApiUrl, T("API URL"))
        @Html.TextBoxFor(m => m.ApiUrl, new { @class = "text medium" })
    </div>
    <div>
        @Html.LabelFor(m => m.ApplicationId, T("Application ID"))
        @Html.TextBoxFor(m => m.ApplicationId, new { @class = "text medium" })
    </div>
    <div>
        @Html.LabelFor(m => m.SecretKey, T("Secret key"))
        @Html.TextBoxFor(m => m.SecretKey, new { @class = "text medium" })
    </div>
    <div>
        @Html.LabelFor(m => m.StoreId, T("Store ID"))
        @Html.TextBoxFor(m => m.StoreId, new { @class = "text medium" })
    </div>
    <div>
        @Html.LabelFor(m => m.PageSize, T("Page size"))
        @Html.TextBoxFor(m => m.PageSize, new { @class = "text small" })
    </div>
</fieldset>